{
  "name": "blockchain-components",
  "version": "1.0.0",
  "description": "A loosely related set of components for blockchain functionality on Shopify storefronts",
  "scripts": {
    "build": "turbo run build",
    "build-docs": "yarn --cwd docusaurus build",
    "build-storybook": "build-storybook",
    "dev": "turbo run dev",
    "docs": "yarn --cwd docusaurus start",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "typecheck": "turbo run typecheck",
    "storybook": "start-storybook -p 6006",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Shopify/blockchain-components.git"
  },
  "author": "Shopify Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Shopify/blockchain-components/issues"
  },
  "homepage": "https://github.com/Shopify/blockchain-components#readme",
  "private": true,
  "workspaces": [
    "docusaurus",
    "packages/*"
  ],
  "prettier": "@shopify/prettier-config",
  "stylelint": {
    "extends": [
      "@shopify/stylelint-plugin",
      "@shopify/stylelint-plugin/prettier"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/node": "^7.20.5",
    "@react-theming/storybook-addon": "^1.1.10",
    "@shopify/babel-preset": "^24.1.5",
    "@shopify/eslint-plugin": "^42.0.2",
    "@shopify/prettier-config": "^1.1.2",
    "@shopify/react-i18n": "^7.5.1",
    "@shopify/typescript-configs": "^5.1.0",
    "@storybook/addon-actions": "^6.5.13",
    "@storybook/addon-essentials": "^6.5.13",
    "@storybook/addon-interactions": "^6.5.13",
    "@storybook/addon-links": "^6.5.13",
    "@storybook/builder-vite": "^0.2.5",
    "@storybook/node-logger": "^6.5.13",
    "@storybook/react": "^6.5.13",
    "@storybook/testing-library": "^0.0.13",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^29.2.4",
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^2.2.0",
    "babel-plugin-react-require": "^3.1.3",
    "eslint": "^8.27.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "node-stdlib-browser": "^1.2.0",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "turbo": "latest",
    "typescript": "^4.4.2",
    "vite": "^3.2.3",
    "vite-plugin-node-stdlib-browser": "^0.1.1",
    "wagmi": "^0.10.4"
  }
}
